{
  "name": "amenity-finder",
  "description": "An example application built with web components only",
  "license": "MIT",
  "author": "amenity-finder",
  "version": "0.0.0",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js",
    "postbuild": "cp dist/index.html dist/200.html",
    "deploy": "surge --domain https://amenity-finder.surge.sh dist",
    "format": "run-p format:*",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "format:prettier-package-json": "prettier-package-json --write ./package.json",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "start": "es-dev-server --app-index index.html --node-resolve --open --watch",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "dependencies": {
    "@inventage/leaflet-map": "^0.6.1",
    "@material/mwc-button": "^0.18.0",
    "@material/mwc-drawer": "^0.18.0",
    "@material/mwc-icon-button": "^0.18.0",
    "@material/mwc-linear-progress": "^0.18.0",
    "@material/mwc-list": "^0.18.0",
    "@material/mwc-textfield": "^0.18.0",
    "@material/mwc-top-app-bar": "^0.18.0",
    "geodesy": "^2.2.1",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.7.0",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "karma-sabarivka-reporter": "^3.2.3",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "no-return-assign": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "error"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 160
  }
}
